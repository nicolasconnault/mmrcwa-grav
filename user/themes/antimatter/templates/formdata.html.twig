{% extends 'partials/base.html.twig' %}

{% if form is null %}
    {% set form = grav.session.getFlashObject('form') %}
{% endif  %}

{% block content %}
    {% set hero_image = page.media['hero.jpg'] %}
    
    {% if hero_image %}
        <div class="flush-top" id="hero-image" style="background-image: url({{ hero_image.url }});">
    {% else %}
        <div class="default-header">
    {% endif %}
    </div>

    {% if config.plugins.breadcrumbs.enabled %}
        {% include 'partials/breadcrumbs.html.twig' %}
    {% endif %}

    <div>
        <h1 id="page-title">{% if page.header.display_title is not empty %}{{ page.header.display_title }}{% else %}{{ page.title }}{% endif %}</h1>
        {% if page.header.description is not empty %}<p id="page-description">{{ page.header.description }}</p>{% endif %}

    {% if form %}
        {% if form.message %}
        <div class="alert notices {{ form.message_color ?: 'green' }}"><p>{{ form.message|raw }}</p></div>
        {% endif %}
        <!--<p>{{ 'PLUGIN_FORM.DATA_SUMMARY'|t }}</p>-->

        {% include "forms/data.html.twig" %}
    {% else %}
        <div class="alert notices yellow"><p>{{ 'PLUGIN_FORM.NO_FORM_DATA'|t }}</p></div>
    {% endif %}
    </div>
{% endblock %}
