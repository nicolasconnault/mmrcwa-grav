{% extends 'partials/base.html.twig' %}

{% block content %}
    {% set hero_image = page.media['hero.jpg'] %}

    {% if hero_image %}
        <div class="flush-top" id="hero-image" style="background-image: url({{ hero_image.url }});">
    {% else %}
        <div class="default-header">
    {% endif %}
    </div>

    {% if config.plugins.breadcrumbs.enabled %}
        {% include 'partials/breadcrumbs.html.twig' %}
    {% endif %}
  
    <div class="narrow-page">
        <h1 id="page-title">{{ page.title }}</h1>
        <p id="page-description">{{ page.header.description }}</p>

        {% for section in page.header.sections %}
            <div class="page-section">
                <h2><i class="fa {{ section.icon }}"></i><br />{{ section.title }}</h2>
                <p class="section-text">{{ section.text }}</p>
            </div>
        {% endfor %}

        {{ page.content }}
    </div>
{% endblock %}
